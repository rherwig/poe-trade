{
  "compilerOptions": {
    "importHelpers": true,
    "target": "es2018",
    "module": "esnext",
    "lib": [
      "es2018"
    ],
    "allowJs": true,
    "outDir": "lib",
    "declaration": true,
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ]
}
